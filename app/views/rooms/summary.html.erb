<%
  title "Resumo - #{@room.name}"
%>
<div class="row summary">
  <div class="col-xs-3 col-md-3"></div>
  <div class="col-xs-6 col-md-6">
    <h3>Summary - <%= @room.name %></h3>
    <% @summaries.each do |story| %>
      <div class="panel-group" id="accordion">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= story[:id] %>"><%= story[:link] %></a>
              <span class="label label-default"><%= symbol_point_hash(story[:point]) %></span>
            </h4>
          </div>
          <div id="collapse-<%= story[:id] %>" class="panel-collapse collapse in">
            <div class="panel-body people-list">
              <ul class="list-unstyled">
                <% story[:individuals].each do |individual| %>
                  <li>
                    <i class="person--avatar"><img src="<%= individual[:user_avatar]%>" /></i>
                    <a href="javascript:;" class="person">
                      <%= individual[:user_name] %>
                      <span class="points pull-right"><%= symbol_point_hash(individual[:user_point]) %></span>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-xs-3 col-md-3"></div>
</div>
